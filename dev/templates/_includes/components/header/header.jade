mixin header()
	header.c-header.js-header
		.container-fluid
			.row.justify-content-between.align-items-center
				.col-12.col-sm-12.col-md-12
					a(href="#").logo BB GROUP
				.col-12.col-sm-12.col-md-12.user-wrap
					a(href="#").user
						span.user__name Austin
						.user__avatar.h-object-fit
							img(src="s/images/tmp_file/avatar/avatar.jpg", alt="alt")
					button(type="button").hamburger
						span.bar.bar1
						span.bar.bar2
						span.bar.bar3
						span.bar.bar4
			#mobile-wrap.mobile-wrap
				.mobile-wrap__user
				.mobile-wrap__menu
				.mobile-wrap__social